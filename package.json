{
  "name": "express-playground",
  "version": "1.0.0",
  "description": "",
  "author": "Simone Rosani",
  "license": "ISC",
  "main": "index.ts",
  "type": "module",
  "jest": {
    "clearMocks": true,
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "prisma": {
    "schema": "src/data/db/schema.prisma"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "prisma-studio-local": "dotenv -e ./.envs/.env.local -- prisma studio",
    "prisma-studio-test": "dotenv -e ./.envs/.env.test -- prisma studio",
    "migrate-local": "dotenv -e ./.envs/.env.local -- prisma migrate dev",
    "migrate-test": "dotenv -e ./.envs/.env.test -- prisma migrate dev",
    "dev": "npm test && dotenv -e ./.envs/.env.local -- nodemon --exec 'node --no-warnings --loader=ts-node/esm' src/start.ts",
    "start": "node dist/src/start.js",
    "postinstall": "tsc",
    "prepare": "husky install",
    "test": "dotenv -e ./.envs/.env.test -- jest -i --runInBand --forceExit"
  },
  "dependencies": {
    "@prisma/client": "^3.15.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.38",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^5.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-mock-extended": "^2.0.6",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2",
    "prisma": "^3.15.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.2"
  }
}
